{
  "name": "lightning-vend-client",
  "scripts": {
    "test": "jest",
    "check-typescript-types": "tsc --noEmit --skipLibCheck",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --watch --mode development",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "author": "Tommy Volk",
  "dependencies": {
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.10.14",
    "@mui/styles": "^5.10.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.27.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": "error",
      "complexity": [
        "error",
        10
      ],
      "max-len": "error",
      "new-parens": "error",
      "no-console": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "no-whitespace-before-property": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-style": "error",
      "sort-imports": "error",
      "strict": "error"
    }
  }
}
