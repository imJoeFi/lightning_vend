{
  "name": "lightning-vend-client",
  "scripts": {
    "test": "jest",
    "check-typescript-types": "tsc --noEmit --skipLibCheck",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --watch --mode development",
    "lint": "eslint './**/*.ts' './**/*.tsx'",
    "start": "ts-node ./server/index.ts",
    "start-dev": "nodemon"
  },
  "author": "Tommy Volk",
  "dependencies": {
    "@emotion/styled": "^11.10.5",
    "@grpc/proto-loader": "^0.7.4",
    "@mui/icons-material": "^5.10.16",
    "@mui/lab": "^5.0.0-alpha.111",
    "@mui/material": "^5.10.17",
    "@mui/styles": "^5.10.16",
    "@node-lightning/invoice": "^0.28.0",
    "axios": "^1.2.1",
    "cookie": "^0.5.0",
    "express": "^4.18.2",
    "grpc": "^1.24.11",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-helmet": "^6.1.0",
    "react-qr-code": "^2.0.8",
    "react-router-dom": "^6.6.1",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/react-dom": "^18.0.9",
    "@types/react-helmet": "^6.1.6",
    "@types/react-test-renderer": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "eslint": "^8.29.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": "error",
      "complexity": [
        "error",
        10
      ],
      "max-len": "error",
      "new-parens": "error",
      "no-console": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "no-whitespace-before-property": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-style": "error",
      "sort-imports": "error",
      "strict": "error"
    }
  }
}
