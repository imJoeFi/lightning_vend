{
  "name": "lightning-vend-client",
  "scripts": {
    "test": "npm run test-client && npm run test-server",
    "test-client": "jest --config jest.config.jsdom.js",
    "test-server": "jest --config jest.config.node.js",
    "update-test-snapshots": "npm run test-client -- -u",
    "check-typescript-types": "tsc --noEmit --skipLibCheck",
    "build-prod": "webpack --mode production",
    "build-dev": "webpack --watch --mode development",
    "build-dev-no-watch": "webpack --mode development",
    "lint": "eslint './**/*.ts' './**/*.tsx'",
    "start-prod": "ts-node ./server/index.ts",
    "start-dev": "nodemon ./server/index.ts --watch server --watch client/out/**",
    "build-proto": "sh proto/build.sh"
  },
  "author": "Tommy Volk",
  "dependencies": {
    "@emotion/styled": "^11.11.0",
    "@grpc/proto-loader": "^0.7.7",
    "@mui/icons-material": "^5.11.16",
    "@mui/lab": "^5.0.0-alpha.129",
    "@mui/material": "^5.12.3",
    "@node-lightning/invoice": "^0.28.0",
    "@react-spring/web": "^9.7.2",
    "axios": "^1.3.6",
    "clean-webpack-plugin": "^4.0.0",
    "compression": "^1.7.4",
    "cookie": "^0.5.0",
    "express": "^4.18.2",
    "grpc": "^1.24.11",
    "html-webpack-plugin": "^5.5.3",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer-hook": "^2.1.1",
    "react-qr-code": "^2.0.8",
    "react-router-dom": "^6.11.1",
    "react-twitter-widgets": "^1.11.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.147.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/react-dom": "^18.2.4",
    "@types/react-test-renderer": "^18.0.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "nodemon": "^2.0.22",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.0.2"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    },
    "globals": {
      "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "comma-dangle": "error",
      "complexity": [
        "error",
        13
      ],
      "max-len": [
        "error",
        80
      ],
      "new-parens": "error",
      "no-console": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "args": "none"
        }
      ],
      "no-whitespace-before-property": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "semi-style": "error",
      "sort-imports": "error",
      "strict": "error",
      "@typescript-eslint/explicit-member-accessibility": "error"
    }
  }
}
